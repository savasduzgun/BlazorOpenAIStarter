@* @page "/models/{ModelName}" *@
@page "/models"
@inject NavigationManager Navigation


@if (ModelName == "chatgpt")
{
	<button class="btn btn-danger mb-4" @onclick=@NavigateToDallEGptPage>Navigate to Dall-e Page</button>
    <ChatGpt />
}
else
{
	<button class="btn btn-danger mb-4" @onclick=@NavigateToChatGptPage>Navigate to Gpt Page</button>
	<Dalle />
}
@code {
	// [Parameter]
	// public string ModelName { get; set; }

	[SupplyParameterFromQuery(Name = "modelName")]
	[Parameter]
	public string ModelName { get; set; }

	private void NavigateToChatGptPage() => Navigation.NavigateTo("/models?modelName=chatgpt");

	private void NavigateToDallEGptPage() => Navigation.NavigateTo("/models?modelName=dall-e");
}
